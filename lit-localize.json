{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["tr"],
  "inputFiles": [
    "dev/src/**/*.js"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./dev/generated/locales",
    "localeCodesModule": "./dev/generated/locale-codes.js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}